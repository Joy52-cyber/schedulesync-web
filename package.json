{
  "name": "schedulesync-server",
  "version": "1.0.0",
  "description": "ScheduleSync Backend API",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js 2>&1",
    "dev": "nodemon server.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build && cd .. && rm -rf dist-built && mkdir -p dist-built && cp -r client/dist/* dist-built/",
    "postinstall": "cd client && npm install"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^129.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "resend": "^2.0.0",
    "stripe": "^14.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}